<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- 注：普通教师操作Action 用GT开头，管理员教师操作Action用AT开头 ，所有新创建的包都需要加登陆过滤器-->
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.multipart.maxSize" value="1000000" />
	<package name="TeacherMange" extends="struts-default" namespace="/">
		<interceptors>
			<interceptor name="logincheckeInterceptor" class="com.nuaa.ec.interceptor.LoginCheckInterceptor"></interceptor>
			<interceptor-stack name="myDefault">
				<interceptor-ref name="logincheckeInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="myDefault"></default-interceptor-ref>
		<global-results>
			<result name="relogin">login.jsp</result>
		</global-results>
		<action name="login" class="com.nuaa.ec.action.TeacherManageAction">
			<result name="general-t">/login/teacher.jsp</result>
			<result name="admin-t">/login/administrator.jsp</result>
			<result name="500">/error/500.html</result>
		</action>
	</package>
	<!-- 公益活动 -->
	<package name="va" extends="struts-default" namespace="/">
	<interceptors>
			<interceptor name="logincheckeInterceptor" class="com.nuaa.ec.interceptor.LoginCheckInterceptor"></interceptor>
			<interceptor-stack name="myDefault">
				<interceptor-ref name="logincheckeInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="myDefault"></default-interceptor-ref>
		<global-results>
			<result name="relogin">login.jsp</result>
		</global-results>
		<action name="GT*_act" class="com.nuaa.ec.va.personal.action.ActMangeAction">
			<result>/VA/{1}_act.jsp</result>
		</action>
		<action name="GT*unjoinreasonAct"  class="com.nuaa.ec.va.personal.action.UnjoinedRuledActManage">
			<result>/VA/{1}unjoinreasonAct.jsp</result>
		</action>
		<action name="GT*_actpublish"  class="com.nuaa.ec.va.personal.action.ActPublishManage">
			<result>/VA/{1}_actpublish.jsp</result>			
		</action>
	</package>
	<!-- 系统设置 -->
	<package name="SystemSet"   extends="struts-default" namespace="/">
		<interceptors>
			<interceptor name="logincheckeInterceptor" class="com.nuaa.ec.interceptor.LoginCheckInterceptor"></interceptor>
			<interceptor-stack name="myDefault">
				<interceptor-ref name="logincheckeInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="myDefault"></default-interceptor-ref>
		<global-results>
			<result name="relogin">login.jsp</result>
		</global-results>
		<!-- 基础设置//Base Set -->
		<action name="AT*Baseset" class="com.nuaa.ec.action.BaseSetAction">
			<result>/sysSetting/BaseSet/{1}Setting.jsp</result>
		</action>
		<!-- 期刊论文设置//PeriodicalPaper Set -->
		<action name="ATPeriodical*set" class="com.nuaa.ec.science.baseSet.action.PeriodicalSetAction">
			<result>/sysSetting/PeriodicalPaperSet/Periodical{1}Set.jsp</result>
		</action>
		<!-- 学术著作设置//AcademicWork Set -->
		<action name="ATAcademic*set"  class="com.nuaa.ec.science.baseSet.action.AcademicWorkSetAction">
			<result>/sysSetting/AcademicWorkSet/Academic{1}Set.jsp</result>
		</action>
		<!-- 科研项目奖励设置//ScientificResearch-Reward Set -->
		<action name="ATProjectReward*set" class="com.nuaa.ec.science.baseSet.action.ScientificProjectRewardSetAction">
			<result>/sysSetting/ProjectReward/ProjectReward{1}Set.jsp</result>
		</action>
		<!-- 参加学术会议设置//JoinAcademicMeeting  Set -->
		<action name="ATJoinAcademicMeeting*set" class="com.nuaa.ec.science.baseSet.action.JoinAcademicMeetingSetAction">
			<result>/sysSetting/JoinAcademicmeeting/JoinAcademicMeeting{1}Set.jsp</result>
		</action>
		<!-- 邀请专家讲学设置//InviteExpertSpeech  Set -->
		<action name="ATInviteExpertSpeech*set"  class="com.nuaa.ec.science.baseSet.action.InviteExpertSpeechSetAction">
			<result>/sysSetting/InviteExpertSpeechSet/InviteExpertSpeech{1}Set.jsp</result>
		</action>
		<!-- 主承办学术会议设置// MainUndertakeAcademicMeeting Set -->
		<action name="ATMainUndertakeAcademicMeeting*set"  class="com.nuaa.ec.science.baseSet.action.MainUndertakeAcademicMeetingSetAction">
			<result>/sysSetting/MianUndertakeAcademicMeetingSet/MainUndertakeAcademicMeeting{1}Set.jsp</result>
		</action>
		<!-- 入选人才工程设置// SelectedTalentProject Set -->
		<action name="ATSelectedTalentProject*set"  class="com.nuaa.ec.science.baseSet.action.SelectedTalentProjectSetAction">
			<result>/sysSetting/SelectedTalentProjectSet/SelectedTalentProject{1}Set.jsp</result>
		</action>
	</package>
	<!-- 科研绩效 设置  //ScientificResearchPerformanceSet-->
	<package name="ScientificResearchPerformanceSet"   extends="struts-default" namespace="/">
		<interceptors>
			<interceptor name="logincheckeInterceptor" class="com.nuaa.ec.interceptor.LoginCheckInterceptor"></interceptor>
			<interceptor-stack name="myDefault">
				<interceptor-ref name="logincheckeInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="myDefault"></default-interceptor-ref>
		<global-results>
			<result name="relogin">login.jsp</result>
		</global-results>
		<!-- 期刊论文绩效设置//PeriodicalPaperSet -->
		<action name="GTperiodicalpaper-*set" class="com.nuaa.ec.ScientificResearchPerformanceSet.Action.periodicalpaperAction">
			<result>/ScientificResearchPerformance/periodicalpaper-{1}.jsp</result>
		</action>
	</package>
</struts>
