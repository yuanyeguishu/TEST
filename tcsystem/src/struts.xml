<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.multipart.maxSize" value="1000000" />
	<package name="TeacherMange" extends="struts-default" namespace="/">
		<interceptors>
			<interceptor name="logincheckeInterceptor" class="com.nuaa.ec.interceptor.LoginCheckInterceptor"></interceptor>
			<interceptor-stack name="myDefault">
				<interceptor-ref name="logincheckeInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="myDefault"></default-interceptor-ref>
		<global-results>
			<result name="error">/error/500.jsp</result>
		</global-results>
		<action name="login" class="com.nuaa.ec.action.TeacherManageAction">
			<result name="general-t">/login/teacher.jsp</result>
			<result name="admin-t">/login/administrator.jsp</result>
			<result name="relogin">/login.jsp</result>
			<result name="500">/error/500.html</result>
		</action>
	</package>
	<package name="va" extends="struts-default" namespace="/">
	<interceptors>
			<interceptor name="logincheckeInterceptor" class="com.nuaa.ec.interceptor.LoginCheckInterceptor"></interceptor>
			<interceptor-stack name="myDefault">
				<interceptor-ref name="logincheckeInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="myDefault"></default-interceptor-ref>
		<global-results>
			<result name="error">/error/500.jsp</result>
		</global-results>
		<action name="*_act" class="com.nuaa.ec.va.action.ActMangeAction">
			<result>/VA/{1}_act.jsp</result>
		</action>
	</package>
</struts>
